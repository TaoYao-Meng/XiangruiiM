                    <!-- 这里显示不了正则表达式， CSDN的一个bug，我接个图放下面 -->
                </param>
            </result>

            <interceptor-ref name="defaultStack"></interceptor-ref>
            <interceptor-ref name="checklogin"></interceptor-ref>
        </action>

